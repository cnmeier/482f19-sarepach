<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionActivity">


    <Button
        android:id="@+id/returnToItems"
        android:layout_height="60dp"
        android:layout_width="80dp"
        android:textSize="12dp"
        android:text="@string/items_label"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="returnToItems"
        />
    <TextView
        android:id="@+id/itemID"
        style="@style/TextStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="28sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageID"
        android:layout_width="170dp"
        android:layout_below="@+id/itemID"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/itemdescriptionID"
        style="@style/TextStyle"
        android:layout_below="@id/imageID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/bidInfoID"
        style="@style/LabelStyle"
        android:layout_below="@id/itemdescriptionID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="22sp"

        />

    <TextView
        android:id="@+id/bidInfo2ID"
        style="@style/TextStyle"
        android:layout_height="wrap_content"
        android:layout_below="@id/bidInfoID"
        android:layout_alignLeft="@+id/returnToItems"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:text="Your Bid:"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/bidAmountInput"
        style="@style/LabelStyle"
        android:layout_width="100dp"
        android:layout_below="@id/bidInfoID"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/bidInfo2ID"
        android:hint="$"
        android:textSize="22sp" />

    <Button
        android:id="@+id/bidID"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bidInfoID"
        android:layout_toRightOf="@id/bidAmountInput"
        android:background="@android:color/holo_green_dark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="BID!"
        android:textSize="26dp"
        android:onClick="gopaymentpage"
        />


</RelativeLayout>


